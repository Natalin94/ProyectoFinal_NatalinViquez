@model ProyectoFinal_natalinviquez.Models.Maquina
@{
    ViewData["Title"] = "CreateMaquina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Maquina</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMaquina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidadProductoPorHora" class="control-label"></label>
                <input asp-for="cantidadProductoPorHora" class="form-control" />
                <span asp-validation-for="cantidadProductoPorHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoEnColones" class="control-label"></label>
                <input asp-for="costoEnColones" class="form-control" />
                <span asp-validation-for="costoEnColones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoPorHora" class="control-label"></label>
                <input asp-for="costoPorHora" class="form-control" />
                <span asp-validation-for="costoPorHora" class="text-danger"></span>
            </div>
   
            <div class="form-group">
                <label asp-for="garantia" class="control-label"></label>
                <input asp-for="garantia" class="form-control" />
                <span asp-validation-for="garantia" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="CreateMaquina" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
